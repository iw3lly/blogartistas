<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
   
    <servlet>
        <servlet-name>ServletCadastroUsuario</servlet-name>
        <servlet-class>br.com.artistas.controle.ServletCadastroUsuario</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCadastroUsuario</servlet-name>
        <url-pattern>/cadastrar</url-pattern>
    </servlet-mapping>

    
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>br.com.artistas.controle.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

  
    <servlet>
        <servlet-name>ServletArtista</servlet-name>
        <servlet-class>br.com.artistas.controle.ServletArtista</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletArtista</servlet-name>
        <url-pattern>/cadastrarArtista</url-pattern>
    </servlet-mapping>

    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
    <servlet-name>ServletExcluirArtista</servlet-name>
    <servlet-class>br.com.artistas.controle.ServletExcluirArtista</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ServletExcluirArtista</servlet-name>
    <url-pattern>/excluirArtista</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>ServletAtualizarArtista</servlet-name>
    <servlet-class>br.com.artistas.controle.ServletAtualizarArtista</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ServletAtualizarArtista</servlet-name>
    <url-pattern>/atualizarArtista</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>ServletEstilo</servlet-name>
    <servlet-class>br.com.artistas.controle.ServletEstilo</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ServletEstilo</servlet-name>
    <url-pattern>/cadastrarEstilo</url-pattern>
</servlet-mapping>

<servlet>
    <servlet-name>ServletPost</servlet-name>
    <servlet-class>br.com.artistas.controle.ServletPost</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ServletPost</servlet-name>
    <url-pattern>/postagem</url-pattern>
</servlet-mapping>



</web-app>
